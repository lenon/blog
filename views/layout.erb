        <li><a href="https://www.linkedin.com/in/lenonmarcel">linkedin</a></li>
      </ul>
      <% if current_user %>
      <ul class="admin-menu">
        <li><a href="/admin">dashboard</a></li>
        <li><a href="/admin/new-post">new post</a></li>
        <li><a href="/logout">logout</a></li>
      </ul>

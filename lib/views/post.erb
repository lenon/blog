<div id="post-<%= @post.id %>" class="post">
  <div class="post-meta">
    <%= l @post.created_at, :full %>
    <%= erb :social, :locals => { :identifier => @post.slug } %>
  </div><!-- .post-meta -->
  <h2 class="post-title">
    <a href="<%= url "/post/#{@post.slug}/" %>"><%= h @post.title %></a>
  </h2>
  <div class="post-content text">
    <%= print_markdown(@post.content) %>
  </div><!-- .post-content -->

  <%= erb :disqus, :locals => { :identifier => @post.id } %>
</div><!-- #post-<%= @post.id %>.post -->

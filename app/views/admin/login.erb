<div class="row">
  <form id="login-form" action="/admin/login" method="post" class="col-md-4 col-md-offset-4">
    <%= erb :"admin/flash" %>

    <h2>Dashboard Sign In</h2>

    <div class="form-group">
      <label for="admin-login">Login</label>
      <input type="text" name="login" class="form-control" id="admin-login" autofocus>
    </div>

    <div class="form-group">
      <label for="admin-password">Password</label>
      <input type="password" name="password" class="form-control" id="admin-password">
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
    <hr>
    <a href="/">&laquo; Back to home page</a>
  </form>
</div>


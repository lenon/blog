<main class="content" role="main">
    <article class="post">
        <header>
            <h1 class="post-title"><%= h @post.title %></h1>
            <div class="post-meta"><time><%= I18n.l @post.created_at, :format => :long %></time></div>
        </header>

        <section class="post-content">
            <%= print_markdown(@post.content) %>
        </section>

        <section class="share">
            <p class="info">
                Compartilhe nas redes sociais
            </p>
            <a class="icon-twitter" target="_blank" href="http://twitter.com/share?text=<%= h @post.title %>&url=<%= h url "/post/#{@post.slug}" %>">
                <span class="hidden">Twitter</span>
            </a>
            <a class="icon-facebook" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=<%= h url "/post/#{@post.slug}" %>">
                <span class="hidden">Facebook</span>
            </a>
            <a class="icon-google-plus" target="_blank" href="https://plus.google.com/share?url=<%= h url "/post/#{@post.slug}" %>">
                <span class="hidden">Google+</span>
            </a>
        </section>

        <footer class="post-footer">
            <section class="author">
                <img src="<%= gravatar_url %>" class="userimage" alt="<%= author_name %>" />
                <p class="attr">Publicado por</p>
                <h4><%= author_name %></h4>
                <p class="bio"><%= author_bio %></p>
            </section>
        </footer>

        <%= erb :disqus, :locals => { :identifier => @post.id } %>
    </article>
</main>

